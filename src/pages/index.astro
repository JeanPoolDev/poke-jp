---
import MainLayout from "../components/MainLayout.astro";

---

<MainLayout title="Home || PokeJp">
  
  <header class="flex items-center justify-center">
    <span class="text-6xl font-bold text-center">
      CONOCE A TODOS LOS 
        <span >P<span class="text-[#F7D02C]">O<span class="text-[#FF0000]">K</span>ÉN<span class="text-[#FF0000]">O</span>N</span>S</span> 
    </span>
  </header>

  <a 
    href="/pokemon/1"
    class="card flex border-2 h-[400px] mt-4 rounded-2xl shadow-lg">
    <div class="overlay rounded-2xl "></div>
    <div class="content space-y-4">
      <h1 class="text-2xl">IR A LOS POKÉMONS</h1>
      <p class="text-base">Conoce a todos los pequeños y adorables pokémons que este mundo nos aguarda</p>
      <button class="btn">
        !IR YA¡
      </button>
    </div>
  </a>
  
</MainLayout>

<style>
  .card{
    cursor: pointer;
    position: relative;
    background-image: url('https://images8.alphacoders.com/124/1243956.jpg');
    background-size: cover;
    transition: 0.5s ease;
  }
  .card:hover{
    scale: 1.2;
  }
  .overlay{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 30% 70%, rgba(0, 0, 0, 0.8), 
    rgba(0, 0, 0, 0.2) 70%);
    z-index: 1; 
  }
  .content{
    color: white;
    margin: 0px 2rem;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50%;
    height: 50%;
    z-index: 2;
  }
  .btn{
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2));
    border: 1px solid rgba(255, 255, 255, 0.2); 
    border-radius: 12px;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    backdrop-filter: blur(4px); /* Efecto de desenfoque para el fondo */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transition: background 0.5s ease;
  }
  
</style>
